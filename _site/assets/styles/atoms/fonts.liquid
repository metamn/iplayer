
@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,300italic,400,400italic,700,700italic|Abel:400|);


// A list of all font mixins
@mixin font($type: body) { 
  @if ($type == body) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 400;
     
  }
  @if ($type == logo) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 700;
     
  }
  @if ($type == signup) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 700;
    line-height: 1.1;
    font-style: italic;
     
  }
  @if ($type == navigation) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 400;
    font-size: small;
    text-transform: uppercase;
    letter-spacing: $lem/12;
     
  }
  @if ($type == role) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 300;
    font-size: small;
    font-style: italic;
    letter-spacing: $lem/12;
     
  }
  @if ($type == title) {
    font-family: "Abel", sans-serif;
    font-size: $heading-level-1;
    line-height: 1.1;
     
  }
}


// Special font mixins
$font-families: Source Sans Pro, Abel;


// 
$font-mixins: body, logo, signup, navigation, role, title;