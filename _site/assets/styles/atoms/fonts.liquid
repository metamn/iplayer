
@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700italic|);


// A list of all font mixins
@mixin font($type: body) { 
  @if ($type == body) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 400;
     
  }
  @if ($type == logo) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 700;
    font-style: italic;
     
  }
}


// Special font mixins
$font-families: Source Sans Pro;


// 
$font-mixins: body, logo;