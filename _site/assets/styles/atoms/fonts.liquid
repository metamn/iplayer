
@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700italic|Titillium+Web:300,400|);


// A list of all font mixins
@mixin font($type: body) { 
  @if ($type == body) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 400;
     
  }
  @if ($type == logo) {
    font-family: "Source Sans Pro", sans-serif;
    font-weight: 700;
     
  }
  @if ($type == title) {
    font-family: "Titillium Web", sans-serif;
    font-weight: 400;
    font-size: $heading-level-1;
     
  }
}


// Special font mixins
$font-families: Source Sans Pro, Titillium Web;


// 
$font-mixins: body, logo, title;